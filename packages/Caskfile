# Install native apps
# Usage: `brew bundle Caskfile`

install caskroom/cask/brew-cask
tap caskroom/versions

# Java 8
tap adoptopenjdk/openjdk
cask install adoptopenjdk/openjdk/adoptopenjdk8 2> /dev/null

# Java latest
cask install java                  2> /dev/null

# Apps

cask install alfred                2> /dev/null
cask install docker                2> /dev/null
cask install dotnet-sdk            2> /dev/null
cask install firefox               2> /dev/null
cask install free-download-manager 2> /dev/null
cask install google-chrome         2> /dev/null
cask install iterm2                2> /dev/null
cask install karabiner-elements    2> /dev/null
cask install messenger             2> /dev/null
cask install postman               2> /dev/null
cask install skim                  2> /dev/null
cask install slack                 2> /dev/null
cask install spotify               2> /dev/null
cask install telegram              2> /dev/null
cask install the-unarchiver        2> /dev/null
cask install visual-studio-code    2> /dev/null
cask install vlc                   2> /dev/null
